{
    input: {{entry}},
    output: {
        sourcemap: true,
        format: 'iife',
        name: 'app',
        file: 'public/build/bundle.js'
    }{{#if plugins}},
    plugins: [
        {{#each plugins}}{{this}}{{#unless @last}},{{/unless}}{{/each}}
    ],{{/if}}
    watch: {
        clearScreen: false
    }
};